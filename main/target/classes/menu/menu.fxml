<?import javafx.scene.text.Text?>
<GridPane xmlns="http://javafx.com/javafx"
          xmlns:fx="http://javafx.com/fxml"
          fx:controller="controllers.menu.MenuController"
          prefHeight="400.0" prefWidth="600.0">
    <padding><Insets top="40" right="40" bottom="40" left="40"/></padding>
    <columnConstraints>
        <ColumnConstraints minWidth="200" prefWidth="100"
                           maxWidth="Infinity">
        </ColumnConstraints>
        <ColumnConstraints minWidth="200" prefWidth="200"
                           maxWidth="Infinity">
        </ColumnConstraints>
        <ColumnConstraints minWidth="200" prefWidth="200"
                           maxWidth="Infinity">
        </ColumnConstraints>
    </columnConstraints>

    <!-- Add Header Label -->
    <Label text="Jeu de combat"
           GridPane.columnIndex="0"
           GridPane.rowIndex="0" GridPane.columnSpan="2"
           GridPane.rowSpan="1" GridPane.halignment="CENTER" >
        <font>
            <Font name="Arial" size="24" ></Font>
        </font>
        <GridPane.margin>
            <Insets top="20" right="0" bottom="20" left="0"></Insets>
        </GridPane.margin>
    </Label>

    <Label text="Joueur(s) : "
           GridPane.columnIndex="0"
           GridPane.rowIndex="2" >
    </Label>
    <Text   text="Joueur 1"
            GridPane.columnIndex="0"
            GridPane.rowIndex="3" />

    <Label text="Arme"
           GridPane.columnIndex="1"
           GridPane.rowIndex="2" >
    </Label>
    <ComboBox
            GridPane.columnIndex="1"
            GridPane.rowIndex="3">
    </ComboBox>

    <Label text="Mouvement"
           GridPane.columnIndex="2"
           GridPane.rowIndex="2" >
    </Label>
    <ComboBox
            GridPane.columnIndex="2"
            GridPane.rowIndex="3">
    </ComboBox>



</GridPane>

